<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt"
            android:layout_width="wrap_content"
            android:background="@color/_80_text_color_white"
            android:layout_height="wrap_content"
            android:text="Hello World!" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/bt2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#808080"
            android:text="无背景色" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/_80_text_color_black"
        android:text="政府工作报告提到，去年国内生产总值达到114万亿元，增长8.1%。按照年平均汇率折算，总量达17.7万亿美元，稳居世界第二，占全球经济的比重预计将超过18%。人均GDP则达到1.25万美元，预计超过全球平均水平。" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#808080"
        android:text="政府工作报告提到，去年全球平均水平。" />


    <EditText
        android:id="@+id/et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入手机号" />


</LinearLayout>