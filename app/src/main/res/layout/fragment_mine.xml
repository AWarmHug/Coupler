<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="120dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="2dp">

        <RelativeLayout
            android:id="@+id/allOrderLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="14dp">

            <ImageView
                android:id="@+id/allOrderIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:src="@mipmap/order_summary_all_order_ic"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/allOrderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/allOrderIcon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="@string/order_summary_all_order" />

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:background="@color/black_40" />

        <RelativeLayout
            android:id="@+id/pendingPaymentLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="14dp">

            <ImageView
                android:id="@+id/pendingPaymentIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:src="@mipmap/order_summary_pending_payment_order_ic"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/pendingPaymentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pendingPaymentIcon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="@string/order_summary_pending_payment" />


        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:background="@color/black_40" />

        <RelativeLayout
            android:id="@+id/notCheckedLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="14dp">

            <ImageView
                android:id="@+id/notCheckedIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:src="@mipmap/order_summary_ongoing_ic" />

            <TextView
                android:id="@+id/notCheckedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/notCheckedIcon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="@string/order_summary_ongoing" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>